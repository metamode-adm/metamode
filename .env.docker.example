# =============================================================================
# METAMODE DOCKER CONFIGURATION
# =============================================================================
# Copy this file to .env and modify the values according to your needs

# -----------------------------------------------------------------------------
# PORT CONFIGURATION
# -----------------------------------------------------------------------------
# Port where Metamode will be accessible
# Examples:
#   8080 - Direct access via http://localhost:8080
#   3001 - For integration with existing Nginx on port 80/443
#   9000 - To avoid conflicts with other applications
METAMODE_PORT=8080

# Optional: Expose database port for debugging (leave empty for internal only)
# DB_EXTERNAL_PORT=5432

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DB_TYPE=postgresql
DB_USER=metamode
DB_PASSWORD=metamode123
DB_NAME=metamode

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
# IMPORTANT: Change this to a secure random string in production!
SECRET_KEY=your-secret-key-here

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=100

# Timezone (e.g., UTC, America/Sao_Paulo, Europe/London)
TIMEZONE=UTC

# Session expiration in hours
SESSION_EXPIRE_HOURS=24

# Environment (development, production)
ENVIRONMENT=production

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Automatic database initialization (true/false)
# true: runs migrations and seeds automatically on container start
# false: requires manual execution of alembic and seed scripts
AUTO_INIT_DB=true

# -----------------------------------------------------------------------------
# USAGE EXAMPLES
# -----------------------------------------------------------------------------
# 
# 1. Direct access (default):
#    METAMODE_PORT=8080
#    Access via: http://localhost:8080
# 
# 2. Integration with your Nginx:
#    METAMODE_PORT=3001
#    Configure your Nginx to proxy to http://localhost:3001
# 
# 3. Avoid conflicts with other apps:
#    METAMODE_PORT=9000
#    Access via: http://localhost:9000
# 
# 4. Development with database access:
#    METAMODE_PORT=8080
#    DB_EXTERNAL_PORT=5432
#    Connect to database via localhost:5432
#